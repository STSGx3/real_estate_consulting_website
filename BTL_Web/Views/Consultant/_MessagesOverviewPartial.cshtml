@model List<MessageOverviewViewModel>

@foreach (var item in Model)
{
    <div class="card mb-3 shadow-sm">
        <div class="card-body d-flex justify-content-between align-items-center">
            <div>
                <h5>@item.User.Username</h5>
                <p class="mb-1"><strong>Thời gian:</strong> @item.LastMessage.Timestamp.ToString("HH:mm dd/MM/yyyy")</p>
                <p><strong>Chiều:</strong> @item.Direction</p>
            </div>
            <a href="@Url.Action("ChatWithUser", "Consultant", new { userId = item.User.Id })" class="btn btn-primary">Xem</a>
        </div>
    </div>
}
